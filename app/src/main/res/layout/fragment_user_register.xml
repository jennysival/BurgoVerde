<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.userRegister.UserRegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/burgoverde_margin24"
        android:paddingBottom="@dimen/burgoverde_margin24">

        <ImageView
            android:id="@+id/logoIv"
            android:layout_width="@dimen/burgoverde_size150"
            android:layout_height="@dimen/burgoverde_size150"
            android:contentDescription="@string/bugoverde_content_description_logo"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_banner_foreground" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bugoverde_name_hint"
            android:textSize="@dimen/burgoverde_font_size14"
            app:boxStrokeColor="@color/bugoverde_dark_green"
            app:errorEnabled="true"
            app:hintTextColor="@color/bugoverde_dark_green">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ageInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bugoverde_age_hint"
            android:textSize="@dimen/burgoverde_font_size14"
            app:boxStrokeColor="@color/bugoverde_dark_green"
            app:errorEnabled="true"
            app:hintTextColor="@color/bugoverde_dark_green">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bugoverde_email_hint"
            android:textSize="@dimen/burgoverde_font_size14"
            app:boxStrokeColor="@color/bugoverde_dark_green"
            app:errorEnabled="true"
            app:hintTextColor="@color/bugoverde_dark_green">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bugoverde_password_hint"
            android:textSize="@dimen/burgoverde_font_size14"
            app:boxStrokeColor="@color/bugoverde_dark_green"
            app:errorEnabled="true"
            app:hintTextColor="@color/bugoverde_dark_green"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/bugoverde_dark_green">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPasswordInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bugoverde_confirm_password_hint"
            android:textSize="@dimen/burgoverde_font_size14"
            app:boxStrokeColor="@color/bugoverde_dark_green"
            app:errorEnabled="true"
            app:hintTextColor="@color/bugoverde_dark_green"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/bugoverde_dark_green">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/burgoverde_margin24"
            android:backgroundTint="@color/bugoverde_dark_green"
            android:text="@string/bugoverde_register_button_text" />
    </LinearLayout>
</ScrollView>
